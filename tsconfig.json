{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es6",
      "module":"esnext",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "strict": false,
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "dist/types",
      "outDir": "./dist",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src"
    ]
  }